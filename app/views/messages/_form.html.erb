<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="container">
     
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-2">
        <strong>Name:</strong>
      </div>
      <div class="col-sm-4">
        <%= f.text_field :name, class: "form-control" %><br />
      </div>
      <div class="col-sm-6"></div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <strong>Comment:</strong>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :body, class: "form-control", :rows=>"4" %><br />
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-2">
        <strong>Age:</strong>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :age, class: "form-control" %><br />
      </div>
      <div class="col-sm-7"></div>
    </div>
    
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>

